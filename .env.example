# MongoDB connection string
# For local MongoDB:
#     mongodb://localhost:27017/devquery
# For MongoDB Atlas:
#     mongodb+srv://username:password@cluster.mongodb.net/devquery
MONGODB_URI=mongodb://localhost:27017/devquery

# Set this to true for development environments without MongoDB
# This will use an in-memory mock storage instead
# USE_MOCK_DB=true

# Session secret (generate a random string)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_session_secret_here

# Port for the server to listen on (default is 5000)
# If you're getting an EADDRINUSE error, change this to another port
PORT=5000

# Network address binding
# Use 0.0.0.0 to accept connections on all network interfaces
# Use localhost to only accept connections from the local machine
HOST=0.0.0.0